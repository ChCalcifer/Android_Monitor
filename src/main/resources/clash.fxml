<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<SplitPane dividerPositions="0.25"
           prefHeight="600" prefWidth="800"
           stylesheets="@clash-style.css"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.devicemonitor.controller.MainController">

    <!-- 左侧导航栏 -->
    <VBox style="-fx-background-color: #f8f9fa;">
        <Label text=" 常规" style="-fx-font-weight: bold; -fx-padding: 15 10 15 20;">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button text="  代理" styleClass="nav-btn" />
        <Button text="  配置" styleClass="nav-btn" />
        <Button text="  日志" styleClass="nav-btn" />
        <Button text="  连接" styleClass="nav-btn" />
        <Button text="  设置" styleClass="nav-btn" />
        <Button text="  关于" styleClass="nav-btn" />
        <Region VBox.vgrow="ALWAYS" />
        <Separator />
        <Label text=" 高级" style="-fx-font-weight: bold; -fx-padding: 15 10 15 20;">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button text="  混合配置" styleClass="nav-btn" />
        <Button text="  TUN模式" styleClass="nav-btn" />
    </VBox>

    <!-- 右侧主内容 -->
    <BorderPane>
        <!-- 顶部状态栏 -->
        <top>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 15;">
                <Label fx:id="statusDot" text="●" style="-fx-text-fill: #2ecc71; -fx-font-size: 16;"/>
                <Label fx:id="statusText" text="已连接" style="-fx-padding: 0 10 0 5;"/>
                <Label fx:id="timerLabel" text="01:44:28"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="重启核心" styleClass="top-btn"/>
            </HBox>
        </top>

        <!-- 中间配置区 -->
        <center>
            <ScrollPane fitToWidth="true">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <!-- 主程序设置 -->
                    <VBox spacing="8">
                        <Label text="主程序设置" style="-fx-font-weight: bold;"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="默认端口：" style="-fx-min-width: 120;"/>
                            <TextField promptText="7890" style="-fx-pref-width: 200;"/>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="日志级别：" style="-fx-min-width: 120;"/>
                            <ComboBox style="-fx-pref-width: 200;">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String value="info" />
                                        <String value="warning" />
                                        <String value="error" />
                                        <String value="debug" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                    </VBox>

                    <!-- 网络设置 -->
                    <VBox spacing="8" style="-fx-padding: 20 0 0 0;">
                        <Label text="网络设置" style="-fx-font-weight: bold;"/>
                        <CheckBox text="允许局域网连接"/>
                        <CheckBox text="IPv6协议"/>
                        <CheckBox text="系统代理"/>
                        <CheckBox text="开机启动"/>
                    </VBox>

                    <!-- 服务模式 -->
                    <VBox spacing="8" style="-fx-padding: 20 0 0 0;">
                        <Label text="服务模式" style="-fx-font-weight: bold;"/>
                        <RadioButton text="TAP适配器" toggleGroup="$serviceModeGroup"/>
                        <RadioButton text="TUN模式" toggleGroup="$serviceModeGroup"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </center>

        <!-- 底部信息栏 -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
                <Label text="2022.07.07 Premium (64756)"/>
                <Button text="打开目录" styleClass="bottom-btn"/>
                <Button text="服务管理" styleClass="bottom-btn"/>
                <Button text="检查更新" styleClass="bottom-btn"/>
            </HBox>
        </bottom>
    </BorderPane>
</SplitPane>