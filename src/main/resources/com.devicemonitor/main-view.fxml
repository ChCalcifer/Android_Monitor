<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.devicemonitor.controller.MainController"
            prefHeight="600" prefWidth="950">

    <!-- 左上角状态灯 -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-padding: 10;">
            <Canvas fx:id="statusCanvas" width="40" height="40"/> <!-- 缩小为40x40 -->
        </HBox>
    </top>

    <!-- 中间CPU频率横向显示 -->
    <center>
        <ScrollPane fitToWidth="false" hbar-policy="NEVER">
            <HBox fx:id="cpuFrequenciesBox" spacing="20" alignment="CENTER"
                  style="-fx-padding: 20;"/>
        </ScrollPane>
    </center>

    <!-- 底部状态标签 -->
    <bottom>
        <Label fx:id="statusLabel" text="正在初始化..."
               style="-fx-font-size: 14px; -fx-padding: 10;"/>
    </bottom>
</BorderPane>