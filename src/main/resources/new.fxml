<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<SplitPane fx:id="splitPane"
           dividerPositions="0.15"
           maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="600.0" prefWidth="950.0"
           xmlns="http://javafx.com/javafx/17.0.14"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.devicemonitor.controller.MainController">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400" prefWidth="90">
                <ListView fx:id="menuListView"  AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="设备信息" />
                            <String fx:value="CPU" />
                            <String fx:value="GPU" />
                            <String fx:value="Display" />
                            <String fx:value="特色功能" />
                            <String fx:value="设备解锁" />
                            <String fx:value="Spd" />
                            <String fx:value="设置" />
                        </FXCollections>
                    </items>
                </ListView>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400" prefWidth="510">
                <BorderPane prefHeight="400" prefWidth="510" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <top>
                        <Pane prefHeight="48.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
                    </top>
                    <center>
                        <TabPane fx:id="tabPane" focusTraversable="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0" rotateGraphic="true" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
                                <Tab fx:id="deviceTab" text="设备信息">
                                        <!-- Tab content for Device Info -->
                                </Tab>
                        </TabPane>
                    </center>
                </BorderPane>
        </AnchorPane>
</SplitPane>
