<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.ImageView?>
<SplitPane fx:id="splitPane" dividerPositions="0.15"
           maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="600.0" prefWidth="950.0"
           stylesheets="/css/DeviceInfoPage.css"
           xmlns="http://javafx.com/javafx/17.0.14"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.monitor.controller.DeviceInfoController">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400" prefWidth="90">
        <VBox alignment="TOP_CENTER"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <HBox alignment="BOTTOM_CENTER" prefHeight="70" styleClass="left-hboxFirstInsideFirst">
                <ImageView fx:id="statusIcon" fitWidth="70" fitHeight="70" preserveRatio="true" />
            </HBox>
            <ListView fx:id="menuListView" style="-fx-alignment: center" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="49" spacing="5" styleClass="left-hboxSecond">
                <Canvas fx:id="statusCanvas" height="23" styleClass="hboxSecond-canvas" width="23" />
                <Label fx:id="deviceStatusLabel" alignment="CENTER" styleClass="hboxSecond-label" />
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="49" spacing="5">
                <Label fx:id="timerLabel" alignment="CENTER" styleClass="timer-label" text="00:00:00" />
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400" prefWidth="510">
        <BorderPane prefHeight="400" prefWidth="510"
                    AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <top>
                <VBox alignment="CENTER_LEFT">
                    <HBox maxHeight="35" prefHeight="35" spacing="10" styleClass="left-hboxFirstInsideSecond">
                    </HBox>
                    <HBox prefHeight="35" styleClass="left-hboxFirstInsideSecond">
                    <TextArea fx:id="gatActivityTextArea" editable="false"
                              maxHeight="25" minHeight="25"
                              prefHeight="25" prefWidth="800"
                              styleClass="activity-text-area"
                              wrapText="true" />
                    </HBox>
                </VBox>
            </top>
            <center>
                <TabPane fx:id="tabPane" focusTraversable="false"
                         nodeOrientation="LEFT_TO_RIGHT"
                         prefHeight="200.0" prefWidth="200.0"
                         rotateGraphic="true" styleClass="hidden-tabs"
                         BorderPane.alignment="CENTER">
                    <Tab fx:id="deviceTab" text="信息">
                    <StackPane>
                     <VBox spacing="10">
                         <HBox prefHeight="75" spacing="50" alignment="CENTER_LEFT">
                             <Region prefWidth="0" />
                             <Label text="设备型号"/>
                             <TextArea fx:id="gatDeviceModelTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                             <Label text="版本类型"/>
                             <TextArea fx:id="gatDeviceBuildTypeTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                         </HBox>
                         <HBox prefHeight="75" spacing="50" alignment="CENTER_LEFT">
                             <Region prefWidth="0" />
                             <Label text="版本日期"/>
                             <TextArea fx:id="gatDeviceBuildDateTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                             <Label text="安卓版本"/>
                             <TextArea fx:id="gatAndroidVersionTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                         </HBox>
                         <HBox prefHeight="75" spacing="50" alignment="CENTER_LEFT">
                             <Region prefWidth="0" />
                             <Label text="DPI        "/>
                             <TextArea fx:id="gatDeviceDpiTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                             <Label text="分辨率   "/>
                             <TextArea fx:id="gatDeviceDisplaySizeTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                         </HBox>
                         <HBox prefHeight="75" spacing="50" alignment="CENTER_LEFT">
                             <Region prefWidth="0" />
                             <Label text="RAM        "/>
                             <TextArea fx:id="gatDeviceRamTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="193"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                             <Label text="ROM        "/>
                             <TextArea fx:id="gatDeviceRomTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="200"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                         </HBox>
                         <HBox prefHeight="75" spacing="50" alignment="CENTER_LEFT">
                             <Region prefWidth="0" />
                             <Label text="版本号   "/>
                             <TextArea fx:id="gatDeviceBuildVersionTextArea" editable="false"
                                       maxHeight="25" minHeight="25"
                                       prefHeight="25" prefWidth="400"
                                       styleClass="tabsHbox-text-area"
                                       wrapText="true" />
                         </HBox>
                     </VBox>
                        </StackPane>
                    </Tab>
                </TabPane>
            </center>
        </BorderPane>
    </AnchorPane>
</SplitPane>
