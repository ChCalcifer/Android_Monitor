<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.monitor.controller.CpuInfoController"
            prefHeight="400.0" prefWidth="510.0"
            stylesheets="/css/CpuInfoPage.css"
            styleClass="cpu-tab-container">
        <BorderPane prefHeight="400" prefWidth="510"
                    AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <center>
                <VBox spacing="15">
                    <!-- 上半部分：0-3号CPU -->
                    <VBox spacing="5">
                        <HBox fx:id="upperCheckBoxContainer"
                              spacing="10"
                              style="-fx-padding: 10; -fx-background-color: #f8f9fa;"/>
                        <LineChart fx:id="upperChart" prefHeight="250">
                            <xAxis>
                                <NumberAxis fx:id="upperXAxis" label="时间（秒）" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="upperYAxis" label="频率 (MHz)"/>
                            </yAxis>
                        </LineChart>
                    </VBox>

                    <!-- 分割线 -->
                    <Separator style="-fx-padding: 5 0;"/>

                    <!-- 下半部分：4-7号CPU -->
                    <VBox spacing="5">
                        <HBox fx:id="lowerCheckBoxContainer"
                              spacing="10"
                              style="-fx-padding: 10; -fx-background-color: #f8f9fa;"/>
                        <LineChart fx:id="lowerChart" prefHeight="250">
                            <xAxis>
                                <NumberAxis fx:id="lowerXAxis" label="时间（秒）" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="lowerYAxis" label="频率 (MHz)"/>
                            </yAxis>
                        </LineChart>
                    </VBox>
                </VBox>
            </center>
        </BorderPane>
</AnchorPane>
