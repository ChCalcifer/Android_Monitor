<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.devicemonitor.controller.MainController"
      alignment="CENTER"
      spacing="20"
      prefHeight="400"
      prefWidth="600">
    <!-- 原有内容保持不变 -->
    <!-- 标题 -->
    <Label text="Device Monitor" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <!-- 状态指示灯 -->
    <Canvas fx:id="statusCanvas" width="50" height="50"/>

    <!-- CPU频率显示 -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="CPU Frequency:" style="-fx-font-size: 16;"/>
        <Label fx:id="cpuFrequencyLabel" style="-fx-font-size: 16; -fx-text-fill: #2e8b57;"/>
    </HBox>
</VBox>
